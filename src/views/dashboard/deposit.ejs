<%- include("_header"); %>

<div class="dashboard__right">
  <!-- Dashboard Body-->
  <div class="dashboard-body">
      <div class="row justify-content-center">
          <div class="col-lg-12">
              <form action="https://www.slab.ng/user/deposit/insert" method="post" class="deposit-form">
                  <div class="row justify-content-center gy-sm-4 gy-3">
                      <div class="col-lg-6">
                          <div class="payment-system-list is-scrollable gateway-option-list">
                              <label for="Flutterwave" class="payment-item gateway-option">
                                  <div class="payment-item__info d-flex">
                                    <div class="pe-3">
                                      <img src="data:image/png;base64," alt="">
                                    </div>
                                    <div class="fw-2">Flutterwave</div>
                                  </div>
                              </label>

                              <!-- <label for="bank_transfer" class="payment-item gateway-option">
                                  <div class="payment-item__info">
                                      <span class="payment-item__check"></span>
                                      <span class="payment-item__name">Bank Transfer</span>
                                  </div>
                                  <div class="payment-item__thumb">
                                      <img class="payment-item__thumb-img" src="/asset/assets/images/gateway/66c0dbf1674351723915249.png" alt="payment-thumb">
                                  </div>
                                  <input class="payment-item__radio gateway-input" type="radio">

                              </label> -->

                          </div>
                      </div>

                      <div class="col-lg-6">
                          <div class="payment-system-list p-3">
                              <div class="deposit-info">
                                  <div class="deposit-info__title">
                                      <p class="text mb-0 text-success">Amount</p>
                                  </div>
                                  <div class="deposit-info__input">
                                      <div class="deposit-info__input-group input-group border border-success border-2">
                                          <span class="deposit-info__input-group-text">₦</span>
                                          <input type="text" class="form-control form--control amount" id="amount" name="amount" placeholder="00.00" value="" autocomplete="off">
                                      </div>
                                  </div>
                              </div>
                              <hr>
                              <div class="deposit-info">
                                  <div class="deposit-info__title">
                                      <p class="text has-icon">Limit <span></span></p>
                                  </div>
                                  <div class="deposit-info__input">
                                      <p class="text"><span class="gateway-limit">₦500.00 - ₦500,000.00</span></p>
                                  </div>
                              </div>

                              <button type="submit" class="btn btn--base w-100 my-3 bg-greenish">
                                  Confirm Deposit
                              </button>
                          </div>
                      </div>
                  </div>
              </form>
          </div>
      </div>
  </div>
</div>

<script>
    document.querySelector('form').addEventListener('submit', (e) => {
      e.preventDefault();
      const amount = document.getElementById('amount').value;
      localStorage.setItem('depositAmount', amount);
      window.location.href = '/user/deposit/confirm';
    });
  </script>

<%- include("_footer"); %>
